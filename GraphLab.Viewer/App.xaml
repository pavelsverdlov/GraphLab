<wpflab:LabApplication  
             xmlns:wpflab="clr-namespace:WPFLab;assembly=WPFLab"
             x:Class="GraphLab.Viewer.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:wpf="clr-namespace:WPFLab.PropertiesEditer;assembly=WPFLab">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>

                <ResourceDictionary>

                    <SolidColorBrush x:Key="Background">#102027</SolidColorBrush>

                    <Style TargetType="{x:Type TextBlock}">
                        <Setter Property="Foreground" Value="White"/>
                    </Style>

                    <Style TargetType="{x:Type ToggleButton}">
                        <Setter Property="Background" Value="#37474f"/>
                    </Style>

                    <Style TargetType="{x:Type Button}">
                        <Setter Property="Background" Value="#37474f"/>
                    </Style>

                </ResourceDictionary>

                <ResourceDictionary Source="/WPFLab;component/PropertiesEditer/ViewPropertyResources.xaml"/>

            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</wpflab:LabApplication>
